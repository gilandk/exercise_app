<h1>Edit User</h1>
<br/>
<%= form_for @user do |f| %>

<% if @user.errors.any? %>
<h3><%= pluralize(@user.errors.size, 'error') %> prevented this User from being save </h3>
<ul>
    <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
</ul>
<% end %>

<div class="form-group">
<%= f.label :name %>
<%= f.text_field :name, class:'form-control' %>
</div>

<div class="form-group">
<%= f.label :email %>
<%= f.text_field :email, class:'form-control' %>
</div>

<br/>

<div class="form-group">
<%= f.submit class:'btn btn-success'%>
</div>

<% end %> 
