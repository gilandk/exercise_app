 <%= link_to 'Add User', add_user_path, class:'btn btn-success' %>
 <br/>
 <br/>


<table class="table">
  <thead class="table-dark">
     <tr>
        <th>Username</th>
        <th>Email</th>
        <th class="text-center">Action</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
       <td><%= user.name %></td>
        <td><%= user.email %></td>
       <td class="text-center">
       <%= link_to 'View', user_path(user.id), class:'btn btn-secondary' %>
       <%= link_to 'Edit', edit_user_path(user.id), class:'btn btn-warning' %>
       <%= link_to 'Delete', delete_user_path(user.id), method: :delete, confirm: 'Delete?', class:'btn btn-danger' %>
       </td>
    </tr>
      <% end %>
  </tbody>
</table>
