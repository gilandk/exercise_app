<h1>Edit Item</h1>
<br/>
<%= form_for @item do |f| %>

<% if @item.errors.any? %>
<h3><%= pluralize(@item.errors.size, 'error') %> prevented this item from being save </h3>
<ul>
    <% @item.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
</ul>
<% end %>

<div class="form-group">
<%= f.label :name %>
<%= f.text_field :name, class:'form-control' %>
</div>

<div class="form-group">
<%= f.label :quantity %>
<%= f.number_field :quantity, class:'form-control' %>
</div>

<div class="form-group">
<%= f.label :price %>
<%= f.number_field :price, class:'form-control' %>
</div>

<div class="form-group">
<%= f.label :userid %>
<%= f.number_field :userid, class:'form-control' %>
</div>

<br/>


<div class="form-group">
<%= f.submit class:'btn btn-success'%>
</div>

<% end %> 